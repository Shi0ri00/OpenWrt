
config aria2 'main'
	option config_dir '/var/etc/aria2'
	option bt_enable_lpd 'true'
	option enable_dht 'true'
	option follow_torrent 'true'
	option save_session_interval '30'
	list header ''
	option enabled '1'
	option user 'root'
	option enable_log 'true'
	option dir '/mnt/sda/aria2'
	option disk_cache '64M'
	option file_allocation 'falloc'
	option log_level 'debug'
	list extra_settings 'seed-time=360'
	list extra_settings 'seed-ratio=2.0'
	list extra_settings 'dht-file-path6=/var/etc/aria2/dht6.dat.main'
	list extra_settings 'bt-detach-seed-only=true'
	list extra_settings 'enable-dht6=true'

